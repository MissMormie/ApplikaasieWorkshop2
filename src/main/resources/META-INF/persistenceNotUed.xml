<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence
             http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd"
             version="2.1">
  <!-- NOT USED -->

    <persistence-unit name="applikaasie">
        <description>
            Persistence unit for Applikaasie workshop2 
        </description>

        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <class>applikaasie.account.Account</class>
        <class>applikaasie.artikel.Artikel</class>
        <class>applikaasie.bestelling.Bestelling</class>
        <class>applikaasie.bestelling.BestelArtikel</class>
        <class>applikaasie.klant.Klant</class>
        <class>applikaasie.klant.adres.Adres</class>
        <class>applikaasie.klant.adres.KlantHeeftAdres</class>

        <properties>
            <property name="javax.persistence.jdbc.driver"
                      value="com.mysql.jdbc.Driver" />

            <property name="javax.persistence.jdbc.url"
                      value="jdbc:mysql://localhost:3306/applikaasie" />

            <property name="javax.persistence.jdbc.user"
                      value="boerpiet" />

            <property name="javax.persistence.jdbc.password"
                      value="kaaskop" />

            <property name="hibernate.show_sql"
                      value="true" />
            
            <property name="format_sql" 
                      value="true"/>


            <property name="hibernate.hbm2ddl.auto" 
                      value="update" />
        </properties>

    </persistence-unit>

</persistence>